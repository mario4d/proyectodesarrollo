# PARA DESPLEGAR OPTIONS EN UN SELECT

// Array con las opciones
const opciones = ['Opción 1', 'Opción 2', 'Opción 3', 'Opción 4'];

// Obtener el elemento <select>
const select = document.getElementById('miSelect');

// Recorrer el array y crear opciones
opciones.forEach(opcion => {
    const optionElement = document.createElement('option'); // Crear un nuevo elemento <option>
    optionElement.value = opcion; // Asignar el valor
    optionElement.textContent = opcion; // Asignar el texto que se mostrará
    select.appendChild(optionElement); // Agregar la opción al <select>
});
